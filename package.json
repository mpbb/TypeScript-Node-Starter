{
    "name": "express-typescript-starter",
    "version": "1.0",
    "description": "A starting point for Node.js express apps with TypeScript",
    "repository": {
        "type": "git",
        "url": "https://github.com/mpbb/TypeScript-Node-Starter"
    },
    "author": "Matthew Buckingham-Bishop",
    "scripts": {
        "build-ts": "tsc",
        "build": "npm run build-ts && npm run lint",
        "lint": "tsc --noEmit && eslint \"**/*.{js,ts}\" --quiet --fix",
        "debug": "nodemon dist/index.js",
        "start": "node dist/index.js",
        "test": "jest --forceExit --coverage --verbose"
    },
    "devDependencies": {
        "@types/eslint": "^8.4.10",
        "@types/jest": "^29.2.4",
        "@types/node": "^18.11.15",
        "dotenv": "^16.0.3",
        "eslint": "^8.29.0",
        "jest": "^29.3.1",
        "nodemon": "^2.0.20",
        "ts-jest": "^29.0.3",
        "ts-node": "^10.9.1",
        "typescript": "^4.9.4"
    }
}
